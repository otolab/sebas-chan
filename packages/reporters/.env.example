# Reporters Package Environment Configuration

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=3000
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Buffer Configuration
BUFFER_DATA_DIR=./data/buffer
BUFFER_MAX_FILE_SIZE=10485760
BUFFER_MAX_FILES=10
BUFFER_FLUSH_INTERVAL=5000

# Event Collector Configuration
COLLECTOR_BATCH_SIZE=100
COLLECTOR_BATCH_INTERVAL=10000

# Server Client Configuration
SERVER_BASE_URL=http://localhost:8080
SERVER_API_KEY=
SERVER_TIMEOUT=30000
SERVER_MAX_RETRIES=3

# Source Manager Configuration
SOURCE_DATA_DIR=./data/sources
MAX_SOURCES=100

# Health Monitor Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_HISTORY_SIZE=100
HEALTH_ERROR_RATE_THRESHOLD=0.1
HEALTH_RESPONSE_TIME_THRESHOLD=5000
HEALTH_MEMORY_USAGE_THRESHOLD=0.9

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Redis Configuration (optional, for distributed rate limiting)
REDIS_URL=

# Node Environment
NODE_ENV=development