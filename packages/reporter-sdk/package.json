{
  "name": "@sebas-chan/reporter-sdk",
  "version": "0.0.1",
  "description": "SDK for creating sebas-chan reporters",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "manual-reporter": "./dist/manual-reporter/cli.js"
  },
  "scripts": {
    "build": "tsc --build --force --verbose",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS='--no-warnings' vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@sebas-chan/shared-types": "*",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
