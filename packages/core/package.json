{
  "name": "@sebas-chan/core",
  "version": "0.0.1",
  "description": "思考エンジンコア",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build --force --verbose",
    "dev": "tsx watch src/index.ts",
    "test": "NODE_OPTIONS='--no-warnings' vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@moduler-prompt/core": "^0.1.5",
    "@moduler-prompt/driver": "^0.2.1",
    "@moduler-prompt/utils": "^0.1.2",
    "@sebas-chan/shared-types": "*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
