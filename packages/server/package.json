{
  "name": "@sebas-chan/server",
  "version": "0.0.1",
  "description": "メインサーバープロセス",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "sebas-chan": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --build --watch & nodemon --watch dist --exec 'node dist/main.js'",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sebas-chan/core": "*",
    "@sebas-chan/db": "*",
    "@sebas-chan/shared-types": "*",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
