{
  "name": "sebas-chan",
  "version": "0.0.1",
  "description": "AIエージェントシステム - 安全なフォーゲッタ",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "tsc --build --force --verbose",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "npm run test --workspaces --if-present",
    "test:interface": "echo 'Interface tests not yet configured'",
    "test:integration": "vitest run --config vitest.config.integration.mts",
    "test:system": "echo 'System tests not yet configured'",
    "test:e2e": "vitest run --config vitest.config.e2e.mts",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "clean": "tsc --build --clean && npm run clean --workspaces --if-present",
    "clean:all": "npm run clean && rm -rf node_modules",
    "clean:cache": "find . -name '*.tsbuildinfo' -delete",
    "server:dev": "npm run dev -w @sebas-chan/server",
    "core:dev": "npm run dev -w @sebas-chan/core",
    "mcp:dev": "npm run dev -w @sebas-chan/mcp-server",
    "ui:dev": "npm run dev -w @sebas-chan/web-ui"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}