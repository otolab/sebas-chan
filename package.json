{
  "name": "sebas-chan",
  "version": "0.0.1",
  "description": "AIエージェントシステム - 安全なフォーゲッタ",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build -w @sebas-chan/shared-types && npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:e2e": "vitest run --config test/e2e/vitest.config.ts",
    "test:api": "npm test -w @sebas-chan/server -- test/api.test.ts",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "server:dev": "npm run dev -w @sebas-chan/server",
    "core:dev": "npm run dev -w @sebas-chan/core",
    "mcp:dev": "npm run dev -w @sebas-chan/mcp-server",
    "ui:dev": "npm run dev -w @sebas-chan/web-ui"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}